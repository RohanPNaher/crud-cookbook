<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g1 px-4"
    >
    <% recipes.forEach(recipe => { %>
      <div class="col">
        <a class="text-decoration-none" href="/recipes/<%= recipe._id %>">
          <div class="card m-4 shadow-lg">
            <% if (recipe.imageUrl) { %>
              <img 
              class="card-img-top" 
              src="<%= recipe.imageUrl %>" 
              alt="<%= recipe.name %> Image"
              >
            <% } else {%>
              <img
                class="card-img-top"
                src="https://i.imgur.com/F7q0fQO.jpeg"
                alt="A placeholder image"
              />
            <% } %>
            <div class="card-body">
              <p class="card-title fs-3 text-dark"><%= recipe.name %></p>
              <p class="card-title fs-4 text-dark">by <%= recipe.author.name %></p>
              <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
