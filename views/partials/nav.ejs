  <% if (!user) { %>
    <link rel="stylesheet" href="/stylesheets/siwg.css">
  <% } %>
</head>
<body>
  <nav>
    <div class="nav-links">
      <a class="<%= title === "All Recipes" ? "active" : "" %>" href="/recipes">All Recipes</a>
      <a class="<%= title === "Add Recipe" ? "active" : "" %>" href="/recipes/new">Post a new recipe</a>
      <a class="<%= title === "All Users" ? "active" : "" %>" href="/profiles">All Users</a>
    </div>

    <div class="login-button">
      <% if (user) { %>
        <a href="/auth/logout">
          <button class="btn btn-light" type="submit">Logout</button>
        </a>
      <% } else { %>
        <a href="/auth/google" class="siwg-link">
          <button type="submit" class="siwg">
            <img id="siwg-image" alt="Sign in with Google" />
          </button>
        </a>
      <% } %>
    </div>
  </nav>
