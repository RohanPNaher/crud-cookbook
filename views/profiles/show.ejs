<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s Avatar"
        class="profile-avatar"
      >
    </div>
  <% } %>
  <h1><%= isSelf ? 'Your' : profile.name + "'s" %> Recipes!</h1>
  
  <div>
    <div class="container p-10">
      <% recipes.forEach(recipe => { %>
      <div class="row p-4">
        <div class="col">
          <div class="card mb-3 shadow-lg" style="max-width: 100%;">
            <div class="row g-0">
              <div class="col-md-4">
                <a class="text-decoration-none" href="/recipes/<%= recipe._id %>">
                  <% if (recipe.imageUrl) { %>
                    <img 
                    class="img-fluid rounded-start profile-show"
                    src="<%= recipe.imageUrl %>" 
                    alt="<%= recipe.name %> Image"
                    />
                  <% } else {%>
                    <img
                      class="img-fluid rounded-start"
                      src="https://i.imgur.com/F7q0fQO.jpeg"
                      alt="A placeholder image"
                    />
                  <% } %>
                </a>
                </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h2 class="card-title"><%= recipe.name %></h2>

                  <% if (recipe.description.length > 300) { %>
                    <% let splitDesc = recipe.description.split(' ') %>
                    <% let editDesc = splitDesc.slice(0, 75).join(' ') %> 
                    <p class="card-text"><%= editDesc %> . . .</p>
                  <% } else { %>
                    <p class="card-text"><%= recipe.description %></p>
                  <% } %>
                  <a class="card-text" href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>