<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s Avatar"
        class="profile-avatar"
      >
    </div>
  <% } %>
  <h1>It's <%= isSelf ? 'you' : profile.name %>!</h1>

  <div>
    <h2><%= isSelf ? 'Your' : profile.name + "'s" %> Recipes!</h2>
    <div class="container py-5 px-3">
      <div 
        class="row row-cols-lg-4 g1 px-4"
      >
      <% recipes.forEach(recipe => { %>
        <div class="col">
          <a class="text-decoration-none" href="/recipes/<%= recipe._id %>">
            <div class="card mb-4 shadow-lg">
              <% if (recipe.imageUrl) { %>
                <img 
                class="card-img-top" 
                src="<%= recipe.imageUrl %>" 
                alt="<%= recipe.name %> Image"
                width="100%"
                >
              <% } else {%>
                <img
                  class="card-img-top"
                  src="https://i.imgur.com/F7q0fQO.jpeg"
                  alt="A placeholder image"
                  width="100%"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-3 text-dark"><%= recipe.name %></p>
                <p class="card-title fs-4 text-dark">by <%= recipe.author.name %></p>
                <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>