<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %>'s Avatar"
        class="profile-avatar"
      >
    </div>
  <% } %>
  <h1>It's <%= isSelf ? 'you' : profile.name %>!</h1>

  <div>
    <h2><%= isSelf ? 'Your' : profile.name + "'s" %> Recipes!</h2>
    <% recipes.forEach(recipe => { %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= recipe.imageUrl %>" alt="<%= recipe.name %> Image">
        <div class="card-body">
          <h5 class="card-title"><%= recipe.name %></h5>
          <p class="card-text">by <%= recipe.author.name %></p>
          <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
        </div>
      </div>
    <% }) %>
  </div>

</main>

<%- include('../partials/footer') %>